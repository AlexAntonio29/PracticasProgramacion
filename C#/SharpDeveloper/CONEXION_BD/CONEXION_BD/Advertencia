using System;
using System.Windows.Forms;


namespace CONEXION_BD
{
	/// <summary>
	/// Description of GuardarAlumno.
	/// </summary>
	class Advertencia: Form
	{
		
		public Advertencia(){
		
		}
		
		public void start(String text){
		this.Width=500;
		this.Height=200;
		
		this.Text= text;
		
		Label labelText= new Label();
		labelText.AutoSize = true;
		
		labelText.Text= text;
		this.Controls.Add(labelText);
			
			//this.Visible(true);
			this.ShowDialog();
			labelText.Text= "";
		}

	}
}
